
@{
    ViewData["Title"] = "Index";
}

<h3>Cart Page</h3>
<table class="table-bordered table">
    <tr>
        <th>Option</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>
    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.ProductModel.ProductId">Remove</a></td>
            <td>@item.ProductModel.ProductId</td>
            <td>@item.ProductModel.ProductName</td>
            <td><img src="~/images/@item.ProductModel.ProductImage" width="60" height="60" /></td>
            <td>@item.ProductModel.ProductPrice</td>
            <td>@item.ProductQuantity</td>
            <td>@(item.ProductModel.ProductPrice * item.ProductQuantity)</td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Sum</td>
        <td>@ViewBag.total</td>
    </tr>
</table>
<br />
<a asp-controller="Home" asp-action="Index">Continue Shopping</a>

